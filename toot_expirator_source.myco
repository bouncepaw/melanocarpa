#!/usr/bin/python3
import sys

if len(sys.argv) < 2:
	print("Error: No URL")
	sys.exit(0)

URL = sys.argv[1]

if "ADDRESS" not in URL:
	print("Error: Wrong URL")
	sys.exit(0)

from mastodon import Mastodon
import html

